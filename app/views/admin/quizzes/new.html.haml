.page-header
	%h2
		New Quiz

= simple_form_for([:admin, @quiz], :html => {:class => 'form-horizontal'}) do |form|
	=form.input :start_date, :as => :string

	=form.simple_fields_for :questions do |q|
		=q.input :question
		=q.input :answer

	.form-actions
		=form.submit 'Save', :class => 'btn btn-primary'
		=link_to 'Cancel', admin_quizzes_path, :class => 'btn'
